---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Not Found">
	<Header slot="header" />
	
  <div class="flex flex-col items-center justify-center flex-grow py-32 text-center">
    <h1 class="text-8xl font-black text-zinc-200 dark:text-zinc-800 mb-6 font-serif">404</h1>
    <p class="text-zinc-600 dark:text-zinc-400 mb-8 font-medium">Page not found.</p>
    <a href="/" class="text-zinc-900 dark:text-zinc-100 border-b border-black dark:border-white pb-0.5 hover:opacity-70 transition-opacity">Return Home</a>
  </div>

	<Footer slot="footer" />
</BaseLayout>
