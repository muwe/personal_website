---
const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  // Tags will be added later
];

import ThemeToggle from './ThemeToggle.astro';
---
<header class="w-full max-w-3xl mx-auto px-6 pt-12 pb-8 flex items-baseline justify-between relative">
  <div>
    <a href="/" class="font-serif text-2xl font-bold tracking-tight text-zinc-900 dark:text-zinc-100 hover:opacity-80 transition-opacity">
      Evan's Blog
    </a>
  </div>
  <nav class="flex items-center">
    <ul class="flex space-x-6 text-sm font-medium text-zinc-500 dark:text-zinc-400">
      {links.map(link => (
        <li>
          <a href={link.href} class="hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors">
            {link.label}
          </a>
        </li>
      ))}
    </ul>
    <div class="flex items-center">
      <ThemeToggle />
    </div>
  </nav>
</header>
